body {
    background: white;
}

#content {
    background: white;
    border: 1px solid #CCC;
    padding: 15px 20px 30px 35px;
}

#content .row {
    margin-left: 0px;
}

#brand {
    display: inline;
}

.search-form {
    margin: 0 5px;
}

.search-form form {
    margin: 0;
}

.btn-menu {
    margin: 4px 5px 0 0;
    float: left;
}

.btn-menu a, .btn-menu input {
    border-radius: 1px !important;
    border-color: #ccc;
}

.list-buttons-column a, .model-list form.icon button {
    padding:0 ;
    display: inline-block;
    margin: 0 4px;
    vertical-align: middle;
}

.btn, textarea, input[type], button, .model-list {
    border-radius: 0;
}

.model-list {
    border-radius: 0;
    white-space: nowrap;
}

.nav-pills li > a {
    border-radius: 0;
}

.select2-container .select2-choice {
    border-radius: 0;
}

a.dropdown-toggle b.caret {
    margin-left: 5px;
}

#page-wrapper .pull-right {
    float: left !important;
}

.model-list a.icon {
    display: inline-block;
    margin: 0 4px;
    vertical-align: middle;
}