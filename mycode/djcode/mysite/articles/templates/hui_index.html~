     <script type="text/javascript">
    	$(function(){
			//$('.hyxf_conx').css('overflow','hidden');
			$('#doctor_list li:gt(2)').hide();
			$('#doctor_list li').eq(1).removeClass('hui');
			var html = $('#doctor_list li').eq(1).next('div').eq(0).html();
			$('#doctor_desc').html(html);
			$('.an_left').click(function(){
				$('#doctor_list li').eq(2).hide();
				$('#doctor_list li:last').insertBefore($('#doctor_list li:first')).show();
				$('#doctor_list li').addClass('hui').eq(1).removeClass('hui');
				$('#doctor_desc').html($('#doctor_list li').eq(1).find('div').html());
			})
			$('.an_right').click(function(){
				var first = $('#doctor_list li').eq(0);
				first.hide().insertAfter($('#doctor_list li:last'));
				$('#doctor_list li').addClass('hui').eq(2).show();
				$('#doctor_list li').eq(1).removeClass('hui');
				$('#doctor_desc').html($('#doctor_list li').eq(1).find('div').html());
			})
			$('#doctor_list li').click(function(){
				var i = $(this).index();
				if(i == 0)
				{
					$('.an_left').click();	
				}
				else if(i == 2)
				{
					$('.an_right').click();		
				}
			})
		})
     </script>
    
